namespace 3x+1
{

    using System;
    using System.Numerics;
    
    public class Program
    {
        public static void Main()
        {
            int counter = 1;
            
            while (true)
            {
                Console.WriteLine();
                Console.Write("Enter a number: ");
                BigInteger number = BigInteger.Parse(Console.ReadLine());

                while (true)
                {
                    Console.Write(number + " ");
                    
                    if (number == 1)
                    {
                        break;
                    }
                    
                    if ((number & 1) == 1)
                    {
                        number = number * 3 + 1;
                    }
                    else
                    {
                        number /= 2;
                    }
                }
		
                Console.WriteLine();
                counter++;
		
                if (counter == 15)
                {
                    break;
                }
            }
        }
    }
}
